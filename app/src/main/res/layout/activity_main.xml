<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="410dp"
    android:layout_height="730dp"
    android:background="@drawable/login"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/Be_image"
        android:layout_width="150dp"
        android:layout_height="80dp"
        android:src="@drawable/be2"
        android:layout_marginStart="50dp"
        android:layout_marginTop="520dp"
        />

    <ImageButton
        android:id="@+id/Be_button"
        android:layout_width="152dp"
        android:layout_height="65dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="528dp"
        android:background="@null"
        android:contentDescription="Botão de entrar"
        />

    <ImageView
        android:id="@+id/bc2_image"
        android:layout_width="150dp"
        android:layout_height="80dp"
        android:src="@drawable/bc2"
        android:layout_toEndOf="@+id/Be_button"
        android:layout_marginStart="10dp"
        android:layout_marginTop="520dp"
        />

    <ImageButton
        android:id="@+id/bc2_button"
        android:layout_width="152dp"
        android:layout_height="65dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="528dp"
        android:layout_toEndOf="@+id/Be_button"
        android:background="@null"
        android:contentDescription="Botão de cadastro"
        />

    <EditText
        android:layout_width="240dp"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="400dp"
        android:layout_marginStart="90dp"
        android:textStyle="bold"
        android:hint="CPF"
        android:inputType="number"
        android:digits="0123456789"
        android:background="@null"
        />

    <EditText
        android:layout_width="240dp"
        android:layout_height="50dp"
        android:layout_marginStart="90dp"
        android:layout_marginTop="461dp"
        android:textStyle="bold"
        android:hint="SENHA"
        android:background="@null"
        />

</RelativeLayout>